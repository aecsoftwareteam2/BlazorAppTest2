@page "/customers"
@using BlazorAppTest2.Data
@using BlazorAppTest2.Models
@using Microsoft.EntityFrameworkCore
@inject AppDbContext Db
@inject NavigationManager Nav

<h3 class="mb-3">Customers</h3>

<div class="mb-3">
    <button class="btn btn-primary" @onclick='() => Nav.NavigateTo("/customers/create")'>+ New Customer</button>
</div>

@if (customers is null)
{
    <p>Loading...</p>
}
else if (customers.Count == 0)
{
    <p>No customers yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th style="width:180px;"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var c in customers)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Email</td>
                <td>@c.Phone</td>
                <td>
                    <button class="btn btn-sm btn-secondary me-2" @onclick='() => Nav.NavigateTo($"/customers/edit/{c.Id}")'>Edit</button>
                    <button class="btn btn-sm btn-danger" @onclick='() => Nav.NavigateTo($"/customers/delete/{c.Id}")'>Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<Customer>? customers;

    protected override async Task OnInitializedAsync()
    {
        customers = await Db.Customers
            .OrderBy(c => c.Name)
            .ToListAsync();
    }
}

